<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".src.login.LoginActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/tv_top_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_view_top_text_normal1"
            android:textSize="@dimen/login_view_top_text"
            android:textColor="@color/black"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tv_top_text_bold"/>
        <TextView
            android:id="@+id/tv_top_text_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_view_top_text_bold"
            android:textSize="@dimen/login_view_top_text"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintStart_toEndOf="@id/tv_top_text1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
            android:id="@+id/tv_top_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_view_top_text_normal2"
            android:textSize="@dimen/login_view_top_text"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_top_text1"
            app:layout_constraintEnd_toEndOf="parent"/>


        <ImageView
            android:id="@+id/iv_ballon"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:src="@drawable/ic_login_balloon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_top_text2"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="40dp"/>

        <LinearLayout
            android:id="@+id/layout_login_kakao"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="3dp"
            android:paddingVertical="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_ballon"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/shape_login_kakao_view_round">

            <ImageView
                android:id="@+id/iv_login_kakao"
                android:layout_width="@dimen/login_kakao_logo"
                android:layout_height="@dimen/login_kakao_logo"
                android:backgroundTint="@color/login_kakao_fg"
                android:src="@drawable/ic_login_kakao"/>

            <TextView
                android:id="@+id/tv_login_kakao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/login_to_kakao"
                android:textColor="@color/login_kakao_fg"
                android:textSize="14dp"
                android:textStyle="bold"
                android:layout_marginStart="5dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_login_others"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layout_login_kakao"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:layout_width="@dimen/login_other_sns_logo"
                android:layout_height="@dimen/login_other_sns_logo"
                android:src="@drawable/ic_login_naver"/>
            <ImageView
                android:layout_width="@dimen/login_other_sns_logo"
                android:layout_height="@dimen/login_other_sns_logo"
                android:layout_marginStart="15dp"
                android:src="@drawable/ic_login_facebook"/>
            <ImageView
                android:layout_width="@dimen/login_other_sns_logo"
                android:layout_height="@dimen/login_other_sns_logo"
                android:layout_marginStart="15dp"
                android:src="@drawable/ic_login_apple"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layout_login_others"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/tv_login_to_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/login_to_email"
                android:textSize="14dp"
                android:textColor="@color/black"/>

            <View
                android:layout_width="1dp"
                android:layout_height="10dp"
                android:layout_marginStart="10dp"
                android:background="@color/gray_line"/>

            <TextView
                android:id="@+id/tv_signUp_to_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/signUp_to_email"
                android:textSize="14dp"
                android:textColor="@color/black"
                android:layout_marginStart="10dp"/>



        </LinearLayout>





    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
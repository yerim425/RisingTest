<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingBottom="@dimen/fragment_padding"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/line_top"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/shopping_basket_view_line_color"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <TextView
        android:id="@+id/tv_product_company"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="상품회사이름"
        android:textColor="@color/gray_text_dark3"
        android:textSize="16dp"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/line_top"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/line_company"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/shopping_basket_view_line_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_product_company"
        app:layout_constraintEnd_toEndOf="parent"/>


    <CheckBox
        android:id="@+id/cb_product_select"
        android:layout_width="@dimen/edit_checkbox_icon_size"
        android:layout_height="@dimen/edit_checkbox_icon_size"
        android:button="@android:color/transparent"
        android:checked="false"
        android:layout_margin="@dimen/fragment_margin"
        android:background="@drawable/sel_basket_edit_checkbox"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line_company"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_product"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/fragment_padding"
        android:paddingTop="5dp"
        app:layout_constraintStart_toEndOf="@id/cb_product_select"
        app:layout_constraintTop_toBottomOf="@id/line_company"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_departure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_today_departure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_store_category_gray"
                android:paddingVertical="3dp"
                android:paddingHorizontal="7dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/iv_today_departure"
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:src="@drawable/img_today_departure"
                    android:adjustViewBounds="true"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>


                <TextView
                    android:id="@+id/tv_today_departure_condition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/if_you_pay_by_17_o_click_on_weekdays"
                    android:textSize="12dp"
                    android:textColor="@color/gray_text_dark3"
                    android:layout_marginStart="5dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/iv_today_departure"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_tomorrow_departure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_store_category_gray"
                android:paddingVertical="3dp"
                android:paddingHorizontal="7dp"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/tv_today_departure_deadline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/today_departure_deadline"
                    android:textSize="12dp"
                    android:textColor="@color/gray_text_dark2"
                    android:layout_marginStart="5dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <View
                    android:id="@+id/line_departure"
                    android:layout_width="1dp"
                    android:layout_height="11dp"
                    android:background="@color/gray_line"
                    android:layout_marginStart="5dp"
                    app:layout_constraintTop_toTopOf="@id/tv_today_departure_deadline"
                    app:layout_constraintStart_toEndOf="@id/tv_today_departure_deadline"
                    app:layout_constraintBottom_toBottomOf="@id/tv_today_departure_deadline"/>


                <TextView
                    android:id="@+id/tv_departure_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sceduled_to_be_sent"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorAccent"
                    android:layout_marginStart="5dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/line_departure"/>

            </androidx.constraintlayout.widget.ConstraintLayout>



        </androidx.constraintlayout.widget.ConstraintLayout>




        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/iv_product_img"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:src="@drawable/img_prod1_1"
            app:riv_corner_radius="5dp"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layout_departure"/>

        <TextView
            android:id="@+id/tv_product_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="[단하루!20%쿠폰+사은품]부드러운 카스테라 옥수수솜 사계절/가을 차렵이불시트"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:textStyle="bold"
            android:ellipsize="end"
            android:layout_marginHorizontal="@dimen/fragment_margin"
            app:layout_constraintEnd_toStartOf="@id/iv_product_delete"
            app:layout_constraintStart_toEndOf="@id/iv_product_img"
            app:layout_constraintTop_toTopOf="@id/iv_product_img"/>


        <ImageView
            android:id="@+id/iv_product_delete"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:src="@drawable/ic_cancel_bold"
            app:tint="@color/black"
            app:layout_constraintStart_toEndOf="@id/tv_product_title"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>


        <TextView
            android:id="@+id/tv_delivery_charge_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50,000원 이상 무료배송"
            android:textColor="@color/gray_text_dark2"
            android:textSize="11dp"
            app:layout_constraintStart_toEndOf="@id/iv_product_img"
            android:layout_marginStart="@dimen/fragment_margin"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/tv_product_title"/>

        <View
            android:id="@+id/line_delivery"
            android:layout_width="1dp"
            android:layout_height="11dp"
            android:background="@color/gray_text_dark2"
            android:layout_marginStart="3dp"
            app:layout_constraintStart_toEndOf="@id/tv_delivery_charge_type"
            app:layout_constraintTop_toTopOf="@id/tv_delivery_charge_type"
            app:layout_constraintBottom_toBottomOf="@id/tv_delivery_charge_type"/>

        <TextView
            android:id="@+id/tv_delivery_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="일반택배"
            android:textColor="@color/gray_text_dark2"
            android:textSize="11dp"
            android:layout_marginStart="3dp"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toEndOf="@id/line_delivery"
            app:layout_constraintTop_toBottomOf="@id/tv_product_title"/>


    </androidx.constraintlayout.widget.ConstraintLayout>



    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_product_option"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_shoppindg_basket_gray_view_rounded"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="@dimen/fragment_margin"
        app:layout_constraintStart_toEndOf="@id/cb_product_select"
        app:layout_constraintTop_toBottomOf="@id/layout_product"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tv_option_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="컬러: 간절기차렵 클린코튼 고밀도이불(퓨어화이트) / 사이즈: SS기본세트(이불+베개커버1)"
            android:textColor="@color/gray_text_dark3"
            android:textSize="15dp"
            android:layout_marginEnd="8dp"
            android:maxLines="3"
            android:ellipsize="end"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/iv_product_delete_from_option"/>

        <ImageView
            android:id="@+id/iv_product_delete_from_option"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:src="@drawable/ic_cancel_bold"
            app:tint="@color/gray_text_dark2"
            app:layout_constraintStart_toEndOf="@id/tv_option_title"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_product_num"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_shopping_basket_edittext_edge_rounded"
            android:paddingVertical="3dp"
            android:layout_marginTop="@dimen/fragment_margin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_option_title">

            <EditText
                android:id="@+id/edt_product_num"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:text="1"
                android:textSize="13dp"
                android:gravity="center"
                android:editable="false"
                android:layout_marginStart="1dp"
                app:layout_constraintEnd_toStartOf="@id/iv_down_arrow"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <ImageView
                android:id="@+id/iv_down_arrow"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/ic_arrow_down_triangle_fill"
                app:tint="@color/login_signup_gray_text_1"
                android:layout_marginHorizontal="7dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>



        <TextView
            android:id="@+id/tv_option_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="64,900"
            android:textSize="16dp"
            android:textColor="@color/gray_text_dark3"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@id/layout_product_num"
            app:layout_constraintEnd_toStartOf="@id/tv_option_amount_won"
            app:layout_constraintBottom_toBottomOf="@id/layout_product_num"/>

        <TextView
            android:id="@+id/tv_option_amount_won"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/won"
            android:textSize="16dp"
            android:textColor="@color/gray_text_dark3"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@id/tv_option_amount"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/tv_option_amount"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tv_change_option"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/change_option"
        android:textColor="@color/gray_text_dark3"
        android:textSize="12dp"
        android:layout_marginStart="@dimen/fragment_margin"
        android:layout_marginTop="@dimen/fragment_margin"
        app:layout_constraintStart_toEndOf="@id/cb_product_select"
        app:layout_constraintTop_toBottomOf="@id/layout_product_option"/>

    <View
        android:id="@+id/line_purchase"
        android:layout_width="1dp"
        android:layout_height="13dp"
        android:background="@color/gray_line"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@id/tv_change_option"
        app:layout_constraintBottom_toBottomOf="@id/tv_change_option"/>

    <TextView
        android:id="@+id/tv_parchase_rigth_now"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/buy_right_away"
        android:textColor="@color/gray_text_dark3"
        android:textSize="12dp"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@id/tv_change_option"
        app:layout_constraintStart_toEndOf="@id/line_purchase"/>

    <TextView
        android:id="@+id/tv_product_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="64,900"
        android:textSize="18dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/tv_parchase_rigth_now"
        app:layout_constraintEnd_toStartOf="@id/tv_product_amount_won"
        app:layout_constraintBottom_toBottomOf="@id/tv_parchase_rigth_now"/>

    <TextView
        android:id="@+id/tv_product_amount_won"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/won"
        android:textSize="18dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginEnd="@dimen/fragment_margin"
        app:layout_constraintTop_toTopOf="@id/tv_parchase_rigth_now"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/tv_parchase_rigth_now"/>

    <View
        android:id="@+id/line_bottom"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/fragment_margin"
        android:background="@color/shopping_basket_view_line_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_product_amount"
        app:layout_constraintEnd_toEndOf="parent"/>


    <TextView
        android:id="@+id/tv_delivery_charge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="배송비 3,000"
        android:textColor="@color/gray_text_dark3"
        android:textSize="16dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line_bottom"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_delivery_charge_free_condition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="묶음배송 상품 12,100원 추가시 무료배송"
        android:textColor="@color/gray_text_dark"
        android:textSize="12dp"
        android:layout_marginTop="3dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_delivery_charge"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_add_bundled_delivery_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_bundled_delivery_product"
        android:textColor="@color/colorAccent"
        android:textSize="14dp"
        android:textStyle="bold"
        android:layout_marginTop="3dp"
        android:drawableEnd="@drawable/ic_arrow_right_small_bold"
        android:drawableTint="@color/colorAccent"
        android:drawablePadding="3dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_delivery_charge_free_condition"
        app:layout_constraintEnd_toEndOf="parent"/>







</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".src.main.MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <FrameLayout
            android:id="@+id/frm_main"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/btm_nav_main"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/btm_nav_main"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <View
                android:id="@+id/frm_ellipse"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/main_upload_back_ellipse"
                android:visibility="invisible"/>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_upload"
                android:layout_width="match_parent"
                android:layout_height="@dimen/main_upload_view_height"
                android:translationY="@dimen/main_upload_view_height"
                android:visibility="gone"
                android:layout_gravity="bottom">

                <TextView
                    android:id="@+id/tv_upload_notion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/main_upload_notion"
                    android:textSize="@dimen/main_upload_notion_text"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_margin="@dimen/main_upload_notion_margin"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/im_upload_ad"/>

                <ImageView
                    android:id="@+id/im_upload_ad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_ad_upload_view"
                    android:adjustViewBounds="true"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/rv_main_upload_type"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_main_upload_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>


            </androidx.constraintlayout.widget.ConstraintLayout>

        </FrameLayout>

        <View
            android:id="@+id/line_main"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_line"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/frm_main"
            app:layout_constraintBottom_toTopOf="@id/btm_nav_main"/>

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/btm_nav_main"
            android:layout_width="match_parent"
            android:layout_height="@dimen/main_btm_nav_height"
            android:background="@color/btm_nav_bg"
            app:itemIconSize="@dimen/main_btm_nav_icon_size"
            app:itemIconTint="@drawable/sel_main_btm_nav_color"
            app:itemTextAppearanceActive="@style/main_btm_nav_text_style"
            app:itemTextAppearanceInactive="@style/main_btm_nav_text_style"
            app:itemTextColor="@drawable/sel_main_btm_nav_color"
            app:labelVisibilityMode="labeled"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:menu="@menu/menu_main_btm_nav" />



    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floating_btn_upload"
        android:layout_width="@dimen/main_fab_upload_size"
        android:layout_height="@dimen/main_fab_upload_size"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="10dp"
        android:clickable="true"
        android:src="@drawable/ic_add_white"
        app:elevation="0dp"
        app:fabCustomSize="@dimen/main_fab_upload_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".src.main.store.StoreFragment">


    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/lyaout_appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/layout_collapsingToolBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:contentScrim="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingVertical="@dimen/fragment_appbar_padding_vertical"
                android:paddingHorizontal="@dimen/fragment_appbar_padding_horizontal">

                <ImageView
                    android:id="@+id/iv_menu_appbar"
                    android:layout_width="@dimen/fragment_appbar_icon_width"
                    android:layout_height="@dimen/fragment_appbar_search_height"
                    android:src="@drawable/ic_menu"
                    android:visibility="gone"
                    android:layout_marginEnd="@dimen/fragment_padding"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <LinearLayout
                    android:id="@+id/layout_search"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/fragment_appbar_search_height"
                    android:orientation="horizontal"
                    android:background="@drawable/shape_search_view"
                    android:gravity="center|start"
                    android:layout_marginEnd="@dimen/fragment_appbar_margin"
                    android:padding="@dimen/fragment_appbar_search_padding"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/iv_store_appbar_scrap"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/iv_search_appbar"
                        android:layout_width="@dimen/fragment_appbar_search_icon_size"
                        android:layout_height="@dimen/fragment_appbar_search_icon_size"
                        android:layout_margin="5dp"
                        app:tint="@color/fragment_appbar_search_icon"
                        android:src="@drawable/ic_search"/>

                    <EditText
                        android:id="@+id/edt_search_appbar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="@string/store_search"
                        android:textColorHint="@color/fragment_appbar_search_hint_text"
                        android:textColor="@color/black"
                        android:textSize="@dimen/fragment_appbar_edt_text_size"
                        android:background="@android:color/transparent"
                        app:layout_constraintStart_toEndOf="@id/iv_menu_appbar"
                        app:layout_constraintTop_toTopOf="parent"/>

                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_store_appbar_scrap"
                    android:layout_width="@dimen/fragment_appbar_icon_width"
                    android:layout_height="@dimen/fragment_appbar_search_height"
                    android:src="@drawable/ic_scrap"
                    android:layout_marginEnd="@dimen/fragment_appbar_margin"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/iv_store_appbar_basket"/>

                <ImageView
                    android:id="@+id/iv_store_appbar_basket"
                    android:layout_width="@dimen/fragment_appbar_icon_width"
                    android:layout_height="@dimen/fragment_appbar_search_height"
                    android:src="@drawable/ic_basket"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <View
        android:id="@+id/line_appbar"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_line_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lyaout_appbar"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lyaout_appbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/viewPager_store"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_store_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/fragment_padding"
                android:overScrollMode="never"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                app:layout_constraintTop_toBottomOf="@id/viewPager_store"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <View
                android:id="@+id/line_1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray_line_3"
                android:layout_marginHorizontal="@dimen/fragment_margin"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rv_store_top"
                app:layout_constraintEnd_toEndOf="parent"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_store_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:overScrollMode="never"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:orientation="horizontal"
                android:clipToPadding="false"
                android:padding="@dimen/fragment_padding"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/line_1"
                app:layout_constraintEnd_toEndOf="parent"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_store_main"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:overScrollMode="never"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rv_store_category"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>
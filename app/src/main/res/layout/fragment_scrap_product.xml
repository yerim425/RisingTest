<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".src.scrap.fragments.scrapProduct.ScrapedProductFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_move_delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="15dp"
        android:visibility="invisible"
        android:paddingTop="@dimen/fragment_padding"
        android:clipToPadding="true"
        android:paddingBottom="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/scrap_remove_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="14dp"
            android:textColor="@color/colorAccent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/50개 선택"
            android:textSize="14dp"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@id/scrap_remove_num"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/tv_move_folder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/scrap_folder_move"
            android:textSize="@dimen/scrap_fragment_bold_text_size"
            android:textColor="@color/login_signup_gray_text_2"
            android:textStyle="bold"
            android:layout_marginEnd="25dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tv_delete"/>

        <TextView
            android:id="@+id/tv_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/deletion"
            android:textSize="@dimen/scrap_fragment_bold_text_size"
            android:textColor="@color/login_signup_gray_text_2"
            android:textStyle="bold"
            android:layout_marginEnd="18dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/line"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <View
            android:id="@+id/line"
            android:layout_width="1dp"
            android:layout_height="15dp"
            android:background="@color/gray_line_2"
            android:layout_marginEnd="18dp"
            app:layout_constraintTop_toTopOf="@id/tv_cancel"
            app:layout_constraintBottom_toBottomOf="@id/tv_cancel"
            app:layout_constraintEnd_toStartOf="@id/tv_cancel"/>


        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cancellation"
            android:textSize="@dimen/scrap_fragment_bold_text_size"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/fragment_padding"
        android:paddingTop="@dimen/fragment_padding"
        android:paddingBottom="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tv_show_category_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/category"
            android:textColor="@color/gray_text_dark2"
            android:textSize="@dimen/scrap_fragment_bold_text_size"
            android:textStyle="bold"
            android:background="@drawable/shape_gray1_view_rounded_3"
            android:paddingHorizontal="10dp"
            android:paddingVertical="5dp"
            android:drawableEnd="@drawable/ic_arrow_down_small"
            android:drawablePadding="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tv_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/edit"
            android:textSize="@dimen/scrap_fragment_bold_text_size"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            android:padding="3dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_scrap"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingHorizontal="9dp"
        android:paddingTop="5dp"
        android:clipToPadding="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_edit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
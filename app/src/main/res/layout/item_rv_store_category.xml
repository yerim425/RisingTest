<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/laytout_item"
    android:paddingHorizontal="10dp"
    android:paddingTop="3dp"
    android:paddingBottom="7dp"
    android:layout_marginEnd="6dp"
    android:background="@drawable/shape_store_category_gray"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv_item"
        android:layout_width="@dimen/fragemtn_store_category_rv_icon"
        android:layout_height="@dimen/fragemtn_store_category_rv_icon"
        android:src="@drawable/ic_store_category_furniture"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/store_rv_category_furniture"
        android:textSize="@dimen/fragemtn_store_category_rv_text"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_item"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
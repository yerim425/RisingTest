<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingVertical="30dp"
    android:paddingHorizontal="30dp"
    android:layout_gravity="center"
    android:background="@drawable/shape_white_view_rounded_10"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_order_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="@string/would_you_like_to_cancel_your_order"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="45dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_order_cancel"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/btn_cancel"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="@string/cancellation"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_weight="1"
            android:paddingVertical="12dp"
            android:gravity="center"
            android:background="@drawable/shape_gray_dark_view_rounded_3"/>

        <TextView
            android:id="@+id/btn_yes"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="@string/check"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_marginStart="10dp"
            android:paddingVertical="12dp"
            android:gravity="center"
            android:background="@drawable/shape_blue_btn_enabled"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
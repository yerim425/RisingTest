<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".src.main.store.productDetail.ProductDetailActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:theme="@style/AppTheme.NoActionBar">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/layout_collapsingToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            android:background="@color/white"
            app:titleEnabled="true"
            app:contentScrim="@android:color/transparent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_appbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:padding="@dimen/fragment_padding"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <ImageView
                        android:id="@+id/iv_back"
                        android:layout_width="@dimen/appbar_icon_size"
                        android:layout_height="@dimen/appbar_icon_size"
                        android:src="@drawable/ic_back"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <ImageView
                        android:id="@+id/iv_go_store"
                        android:layout_width="@dimen/appbar_icon_size"
                        android:layout_height="@dimen/appbar_icon_size"
                        android:src="@drawable/ic_go_store"
                        android:layout_marginStart="@dimen/fragment_margin"
                        app:layout_constraintStart_toEndOf="@id/iv_back"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <TextView
                        android:id="@+id/tv_title_appbar"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="[오늘의딜]첫번째 BLDC 드라이기 에어슈팅 MC3A01A (+22년 9월 신제품 사은품)"
                        android:textSize="@dimen/appbar_title_text_size"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_marginHorizontal="@dimen/fragment_margin"
                        app:layout_constraintEnd_toStartOf="@id/iv_search_appbar"
                        app:layout_constraintStart_toEndOf="@id/iv_go_store"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <ImageView
                        android:id="@+id/iv_search_appbar"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_search"
                        android:layout_marginEnd="@dimen/fragment_margin"
                        app:layout_constraintTop_toTopOf="@id/iv_shopping_basket_appbar"
                        app:layout_constraintEnd_toStartOf="@id/iv_shopping_basket_appbar"
                        app:layout_constraintBottom_toBottomOf="@id/iv_shopping_basket_appbar"/>

                    <ImageView
                        android:id="@+id/iv_shopping_basket_appbar"
                        android:layout_width="@dimen/appbar_icon_size"
                        android:layout_height="@dimen/appbar_icon_size"
                        android:src="@drawable/ic_basket"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingHorizontal="@dimen/fragment_padding"
                    android:overScrollMode="never"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/layout_appbar"
                    app:layout_constraintEnd_toEndOf="parent"/>
                
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_viewpager"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/rv_category"
                    app:layout_constraintEnd_toEndOf="parent">

                    <androidx.viewpager2.widget.ViewPager2
                        android:id="@+id/viewPager_product_image"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>
                    
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_product_detail_viewpager_ellipse_rounded"
                        android:paddingVertical="3dp"
                        android:paddingHorizontal="6dp"
                        android:layout_marginBottom="10dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent">

                        <TextView
                            android:id="@+id/viewPager_currentNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1"
                            android:textSize="13dp"
                            android:textStyle="bold"
                            android:textColor="@color/white"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="/"
                            android:textSize="13dp"
                            android:textStyle="bold"
                            android:textColor="@color/white"/>
                        <TextView
                            android:id="@+id/viewPager_totalNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="8"
                            android:textSize="13dp"
                            android:textStyle="bold"
                            android:textColor="@color/white"/>
                        
                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_remain_date_todays_deal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="6dp"
                    android:paddingHorizontal="@dimen/fragment_padding"
                    android:background="@color/remain_date_todays_deal_bg"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/layout_viewpager"
                    app:layout_constraintEnd_toEndOf="parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent">


                        <ImageView
                            android:id="@+id/iv_clock"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@drawable/ic_clock"
                            app:tint="@color/remain_date_todays_deal_fg"/>

                        <TextView
                            android:id="@+id/tv_todays_deal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/store_rv_todays_deal"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textColor="@color/remain_date_todays_deal_fg"
                            android:layout_marginStart="5dp"/>

                        <TextView
                            android:id="@+id/tv_remain_date_todays_deal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5일 남음"
                            android:textColor="@color/white"
                            android:textSize="15dp"
                            android:textStyle="bold"
                            android:layout_marginStart="10dp"/>

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/iv_arrow_right"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/ic_arrow_right_bold"
                        app:tint="@color/white"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>



                
                <TextView
                    android:id="@+id/tv_product_company"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="블링몬스터즈"
                    android:textColor="@color/gray_text_dark"
                    android:textStyle="bold"
                    android:textSize="13dp"
                    android:layout_margin="@dimen/fragment_margin"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/layout_remain_date_todays_deal"/>

                    <TextView
                        android:id="@+id/tv_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="[오늘의딜]첫번째 BLDC 드라이기 에어슈팅 MC3A01A (+22년 9월 신제품 사은품)"
                        android:textColor="@color/black"
                        android:textSize="@dimen/appbar_title_text_size"
                        android:layout_marginHorizontal="@dimen/fragment_margin"
                        android:layout_marginTop="10dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_product_company"
                        app:layout_constraintEnd_toStartOf="@id/iv_share"/>

                <ImageView
                    android:id="@+id/iv_share"
                    android:layout_width="@dimen/appbar_icon_size"
                    android:layout_height="@dimen/appbar_icon_size"
                    android:src="@drawable/ic_share"
                    android:layout_marginTop="@dimen/fragment_margin"
                    android:layout_marginEnd="@dimen/fragment_margin"
                    app:layout_constraintTop_toBottomOf="@id/tv_product_company"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <TextView
                    android:id="@+id/tv_discount_percentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="31%"
                    android:textColor="@color/gray_text_dark3"
                    android:textSize="13sp"
                    android:layout_margin="@dimen/fragment_margin"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_title"/>

                <TextView
                    android:id="@+id/tv_discount_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="89,000"
                    android:textSize="13dp"
                    android:textColor="@color/login_signup_gray_text_1"
                    android:layout_marginStart="3dp"
                    android:layout_marginTop="@dimen/fragment_margin"
                    app:layout_constraintStart_toEndOf="@id/tv_discount_percentage"
                    app:layout_constraintTop_toBottomOf="@id/tv_title"/>

                <TextView
                    android:id="@+id/tv_product_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="61,000원"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginStart="@dimen/fragment_margin"
                    android:layout_marginTop="10dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_discount_percentage"/>

                <TextView
                    android:id="@+id/tv_special_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/special_price"
                    android:textSize="12dp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_marginStart="5dp"
                    android:padding="2dp"
                    android:background="@drawable/shape_special_price_red_text"
                    app:layout_constraintStart_toEndOf="@id/tv_product_amount"
                    app:layout_constraintTop_toTopOf="@id/tv_product_amount"
                    app:layout_constraintBottom_toBottomOf="@id/tv_product_amount"/>

                <View
                    android:id="@+id/line_1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray_line_2"
                    android:layout_marginTop="@dimen/fragment_margin"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_product_amount"
                    app:layout_constraintEnd_toEndOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>
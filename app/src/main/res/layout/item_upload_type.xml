<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/im_item_upload_type"
        android:layout_width="@dimen/main_upload_type_image"
        android:layout_height="@dimen/main_upload_type_image"
        android:src="@drawable/ic_upload_photo"
        android:layout_margin="@dimen/main_upload_view_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/tv_upload_type_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_upload_photo"
        android:textSize="@dimen/main_upload_type_title_text"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginStart="@dimen/main_upload_view_margin"
        app:layout_constraintStart_toEndOf="@id/im_item_upload_type"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/tv_upload_type_benefit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_upload_photo_benefit"
        android:textSize="@dimen/main_upload_type_benefit_text"
        android:textStyle="bold"
        android:textColor="@color/upload_benefit"
        android:background="@drawable/shape_upload_benefit_text_round"
        android:paddingVertical="3dp"
        android:paddingHorizontal="8dp"
        android:layout_margin="@dimen/main_upload_view_margin"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <View
        android:id="@+id/line_upload_type"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_line"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
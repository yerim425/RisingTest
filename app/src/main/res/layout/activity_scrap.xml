<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".src.scrap.ScrapActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/layout_appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:theme="@style/AppTheme.NoActionBar"
        android:background="@color/white">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/layout_collapsingToolBar"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            app:contentScrim="@android:color/transparent"
            app:titleCollapseMode="fade"
            app:titleEnabled="true"
            app:scrimVisibleHeightTrigger="180dp"
            app:collapsedTitleGravity="center"
            android:fitsSystemWindows="true"
            app:collapsedTitleTextAppearance="@style/scrap_collapsed_title_style"
            app:title="@string/scrapbook"
            app:expandedTitleGravity="center"
            app:expandedTitleTextColor="@android:color/transparent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snapMargins">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp">

                <TextView
                    android:id="@+id/tv_scrapbook"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/scrapbook"
                    android:textSize="19dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:gravity="center"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_scrapbook"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/iv_user_profile"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/img_prod1_1"
                        app:riv_corner_radius="50dp"/>

                    <TextView
                        android:id="@+id/tv_user_nickname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="사용자이름"
                        android:textSize="13dp"
                        android:textColor="@color/main_upload_back_ellipse"
                        android:textStyle="bold"
                        android:layout_marginStart="5dp"/>
                </LinearLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/collapsing_toolbar"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                app:layout_collapseMode="pin"
                app:contentInsetStart="0dp"
                android:background="@android:color/transparent">

                <ImageView
                    android:id="@+id/iv_back"
                    android:layout_width="@dimen/fragment_appbar_search_icon_size"
                    android:layout_height="@dimen/fragment_appbar_search_icon_size"
                    android:layout_gravity="start"
                    android:layout_marginStart="@dimen/fragment_margin"
                    android:src="@drawable/ic_back"/>

                <ImageView
                    android:id="@+id/iv_share"
                    android:layout_width="@dimen/fragment_appbar_search_icon_size"
                    android:layout_height="@dimen/fragment_appbar_search_icon_size"
                    android:layout_gravity="end"
                    android:layout_marginEnd="@dimen/fragment_margin"
                    android:src="@drawable/ic_share"/>

            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.CollapsingToolbarLayout>

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/layout_tab"
            style="@style/scrap_tabbar_margin_style"
            android:layout_width="match_parent"
            android:layout_height="@dimen/fragment_tabbar_height"
            android:background="@color/white"
            app:tabIndicatorColor="@color/fragment_tabbar_selected"
            app:tabIndicatorFullWidth="true"
            app:tabIndicatorHeight="3dp"
            app:tabMinWidth="50dp"
            app:tabMode="scrollable"
            app:tabGravity="start"
            app:tabRippleColor="@color/white"
            app:tabSelectedTextColor="@color/fragment_tabbar_selected"
            app:tabTextAppearance="@style/fragment_tabbar_text_style"
            app:tabTextColor="@color/fragment_tabbar_unselected"
            app:tabPaddingStart="5dp"
            app:tabPaddingEnd="5dp"
            android:layout_marginHorizontal="@dimen/fragment_margin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layout_appbar"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="모두(0)" />

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="폴더" />


        </com.google.android.material.tabs.TabLayout>

        <View
            android:id="@+id/line_tabbar"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_line"/>

    </com.google.android.material.appbar.AppBarLayout>




    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager_scrap"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"/>






</androidx.coordinatorlayout.widget.CoordinatorLayout>
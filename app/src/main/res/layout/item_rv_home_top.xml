<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginVertical="5dp"
    android:layout_marginHorizontal="2dp"
    android:id="@+id/layout_item"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv_item"
        android:layout_width="@dimen/fragment_home_top_rv_item_icon_size"
        android:layout_height="@dimen/fragment_home_top_rv_item_icon_size"
        android:src="@drawable/ic_home_quick_delivery"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/quick_delivery"
        android:textSize="@dimen/fragment_home_top_rv_item_text_size"
        android:textColor="@color/black"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="@id/iv_item"
        app:layout_constraintTop_toBottomOf="@id/iv_item"
        app:layout_constraintEnd_toEndOf="@id/iv_item"
        app:layout_constraintBottom_toBottomOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>
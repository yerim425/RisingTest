<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="12dp"
            android:paddingVertical="5dp">

            <TextView
                android:id="@+id/tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/scraped_it"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:layout_marginEnd="@dimen/fragment_margin"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/btn_see_scrapbook"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/btn_see_scrapbook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/see_scrapbook"
                android:textColor="@color/colorAccent"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_marginEnd="5dp"
                android:paddingHorizontal="@dimen/fragment_padding"
                android:paddingVertical="12dp"
                android:background="@drawable/shape_blue_edge_rounded_5"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@id/btn_put_in_folder"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <TextView
                android:id="@+id/btn_put_in_folder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/put_in_folder"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:textStyle="bold"
                android:paddingHorizontal="@dimen/fragment_padding"
                android:paddingVertical="12dp"
                android:background="@drawable/shape_blue_btn_enabled"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</layout>